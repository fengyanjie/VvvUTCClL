<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cs_recommend_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.voole.epg.base.LogoViewTcl
            android:id="@+id/recommend_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="88" />
        <!-- android:layout_weight="14" -->

        <com.voole.epg.view.movies.rank.RankView
            android:layout_weight="12"
            android:id="@+id/rankView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cs_rank_bg" />
    </LinearLayout>

</LinearLayout>