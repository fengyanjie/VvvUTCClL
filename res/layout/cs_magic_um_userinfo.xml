<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.voole.epgfor4k"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/mymagic_um_register_phone"
            android:textColor="@android:color/white"
            android:textSize="26dp" />

        <com.voole.epg.base.common.MyEditText
            android:id="@+id/input_et"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/mymagic_um_register_code"
            android:textColor="@android:color/white"
            android:textSize="26dp" />

        <com.voole.epg.base.common.MyEditText
            android:id="@+id/code_et"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/getCode"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cs_mymagic_getcode_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/mymagic_um_register_phone_tip"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:singleLine="true"
            android:textColor="#929292"
            android:textSize="20dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <com.voole.epg.base.common.ShadeButton
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp" />

        <com.voole.epg.base.common.ShadeButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>